				values.remove(n);

			setDeletePosition(values.get(getWhileLoopCount())-1);
			whileLoopCount++;
		}

		//Removes 1 from values as not prime
		values.set(0, 0);
		//Removes numbers that aren't prime
		for(int b = 0; b < values.size(); b++){
